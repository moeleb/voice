<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FF4081" /> <!-- Pink color when pressed -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#3F51B5" /> <!-- Blue color normally -->
        </shape>
    </item>

</selector>
